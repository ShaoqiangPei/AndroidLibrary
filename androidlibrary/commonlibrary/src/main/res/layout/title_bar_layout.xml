<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ImageTextView="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.function.ImageTextView
        android:id="@+id/tv_left"
        style="@style/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        ImageTextView:drawable="@mipmap/ic_left_back"
        ImageTextView:drawableWidth="10dp"
        ImageTextView:drawableHeight="18dp"
        android:drawablePadding="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ImageTextView:position="1"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.function.ImageTextView
        android:id="@+id/tv_right"
        style="@style/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        ImageTextView:drawable="@mipmap/ic_right_back"
        ImageTextView:drawableWidth="10dp"
        ImageTextView:drawableHeight="18dp"
        android:drawablePadding="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ImageTextView:position="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>
